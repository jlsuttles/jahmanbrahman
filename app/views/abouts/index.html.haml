- @active_tab = :about
- title "About", false
- stylesheet 'jcarousel'
- javascript 'jquery.jcarousel.min', 'jcarousel'
- stylesheet 'shadowbox'
- javascript 'js.shadowbox', 'shadowbox'

#main_content

  - if current_user.try :admin?
    = link_to 'New', new_about_path, :class => 'new'

  - @abouts.each_with_index do |about, index|
    %ul{ :id => "about_carousel_#{index}", :class => "jcarousel-skin-classy" }
      %li= link_to image_tag('/images/band01.jpg'), '/images/band01.jpg', :rel => 'shadowbox[JB]', :class => "band_thumb", :title => :Title
    
    .section.left_two_thirds
      %h2= h about.title
      %p= about.description
      - if current_user.try :admin?
        = link_to 'Edit', edit_about_path(about), :class => 'edit'
        = link_to 'Delete', about, :confirm => "Are you sure you want to delete #{about.title}?", :method => :delete, :class => 'delete'
    .section.right_one_third
      %h2= h about.title + " Links"
