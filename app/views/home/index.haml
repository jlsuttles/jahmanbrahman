- @active_tab = :home
- title 'Home', false

= render :partial => 'animated_header'

#main_content
  .section.left_two_thirds
    - if current_user.try :admin?
      = link_to 'New', new_news_story_path, :class => :new, :rel => :shadowbox

    - @news_stories.each do |news_story|
      .section
        %h2= h news_story.title
        %p= news_story.description
        - if current_user.try :admin?
          = link_to 'Edit', edit_news_story_path(news_story), :class => :edit, :rel => :shadowbox
          = link_to 'Delete', news_story, :class => :delete, :confirm => "Are you sure you want to delete #{news_story.title}?", :method => :delete

  .section.right_one_third{:style => "text-align:right"}
    %h2 
      %i Newfields
    %h3 Available in iTunes Store
    = image_tag '/images/newfields_album_cover.jpg', :width => '310px'
    = render :partial => '/layouts/jplayer_newfields'
    = render :partial => 'layouts/contact'
    %br
    = render :partial => 'layouts/mailing_list'
    %br
    %h3 Next Show
    %h3 Last Show
    %h3 Newest Video
    %h3 Newest Photo
