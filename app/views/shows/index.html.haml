- @active_tab = :shows
- title 'Shows', false

#main_content
  #future_shows
    %h1 Future Shows

    - if current_user.try :admin?
      = link_to 'New', new_show_path, :class => :new

    - @future_shows.each do |show|
      .section
        %h2=h(show.name) if show.name
        %p=h(show.venue.name) if show.venue.try(:name)
        %p=h(show.note) if show.note
        %p=h(show.ages) if show.ages
        %p=h(show.datetime.strftime("%A, %B %d, %Y %I:%M %p")) if show.datetime
        - if current_user.try :admin?
          = link_to 'Edit', edit_show_path(show), :class => :edit
          = link_to 'Delete', show, :confirm => "Are you sure you want to delete #{show.name}?", :method => :delete, :class => :delete

  #past_shows
    %h1 Past Shows

    - @past_shows.each do |show|
      .section
        %h2=h(show.name) if show.name
        %p=h(show.venue.name) if show.venue.try(:name)
        %p=h(show.note) if show.note
        %p=h(show.ages) if show.ages
        %p=h(show.datetime.strftime("%A, %B %d, %Y %I:%M %p")) if show.datetime
        - if current_user.try :admin?
          = link_to 'Edit', edit_show_path(show), :class => :edit
          = link_to 'Delete', show, :confirm => "Are you sure you want to delete #{show.name}?", :method => :delete, :class => :delete
