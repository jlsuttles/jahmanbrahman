- @active_tab = :shows
- title 'Shows', false

#main_content
  #future_shows
    %h2 Future Shows

    - if current_user.try :admin?
      = link_to 'New', new_show_path

    - @future_shows.each do |show|
      .section
        %h2=h(show.name) if show.name
        %p=h(show.venue.name) if show.venue.try(:name)
        %p=h(show.note) if show.note
        %p=h(show.datetime.strftime("%A, %B %d, %Y %I:%M %p")) if show.date_time
        - if current_user.try :admin?
          = link_to 'Edit', edit_show_path(show)
          = link_to 'Delete', show, :confirm => "Are you sure you want to delete #{show.title}?", :method => :delete

  #past_shows
    %h2 Past Shows

    - @past_shows.each do |show|
      .section
        %h2=h(show.name) if show.name
        %p=h(show.venue.name) if show.venue.try(:name)
        %p=h(show.note) if show.note
        %p=h(show.datetime.strftime("%A, %B %d, %Y %I:%M %p")) if show.date_time
        - if current_user.try :admin?
          = link_to 'Edit', edit_show_path(show)
          = link_to 'Delete', show, :confirm => "Are you sure you want to delete #{show.title}?", :method => :delete
