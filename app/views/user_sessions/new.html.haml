- @active_tab = :login
- title "Login"

#main_content
  .section.one_third.float_left
  .section.one_third.float_left
    - form_for @user_session do |f|
      
      .section
        = f.error_messages

      %table
        %tr
          %td
            %h3= f.label :email
          %td= f.text_field :email, :class => :text_field
        %tr
          %td
            %h3= f.label :password
          %td= f.password_field :password, :class => :text_field
        %tr
          %td &nbsp;
          %td
            = f.check_box :remember_me
            = f.label :remember_me
        %tr
          %td &nbsp;
          %td
            = f.submit "Login", :class => 'submit'
            = link_to "Cancel", root_path, :class => 'cancel'
  .clear
